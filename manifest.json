{
	"manifest_version": 2,
	"name": "GDPR compliance plugin",
	"version": "0.3",
	"description": "A description",
	"homepage_url": "https://gitlab.com/Dennis_Kalo/cookiemonitor",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
	"background": {
		"scripts": [
			"dist/background_script_bundle.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"dist/content_script_bundle.js"
			]
		}
	],
	"browser_action": {
		"default_popup": "/dist/index.html",
    "default_title": "Cookiemonitor"
	},
	"web_accessible_resources": [
		"dist/page_script_bundle.js"
	],
	"permissions": [
		"cookies",
		"<all_urls>",
		"tabs"
	]
}
